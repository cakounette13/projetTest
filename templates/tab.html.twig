{% extends 'base.html.twig' %}

{% block title %}Continent{% endblock %}

{% block body %}

    {% block menu %}
        {% include "navbar/navbar.html.twig" %}
    {% endblock %}

    <div class="container">
        <h1 class="title text-center mt-4">Pays appartenant au continent : {{ cont.name }}</h1>
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">Country</th>
                    <th scope="col">Inhabitants</th>
                    <th scope="col">Capital</th>
                </tr>
            </thead>

            {% for country in cont.countries %}
            <tbody>
                <tr>
                    <td>{{ country.name }}</td>
                    <td>{{ country.NbInhabitants }}</td>
                    <td>{{ country.CapitalCity}}</td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
    </div>       
{% endblock %}